# ElevenLabs
ELEVENLABS_API_KEY=your_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
ELEVENLABS_MODEL_ID=eleven_v3
ELEVENLABS_OUTPUT_FORMAT=mp3_44100_128
ELEVENLABS_TEXT_LIMIT=4500

# Substack
SUBSTACK_FEED_URL=https://ovidiueftimie.substack.com/feed
MAX_POSTS_PER_RUN=3
# Optional cherry-pick selectors (comma-separated):
# - guid:<exact-guid-or-id>
# - link:<exact-url>
# - title:<partial title text>
# - plain text token (matches title/guid/link contains)
# Example:
# TARGET_ARTICLES=title:My Post,guid:1234567890
TARGET_ARTICLES=
# true => allow reprocessing already processed items when cherry-picking
TARGET_INCLUDE_PROCESSED=true

# Podcast metadata
PODCAST_TITLE=Ovidiu Eftimie - Audio Articles
PODCAST_DESCRIPTION=Spoken versions of my Substack articles.
PODCAST_LINK=https://ovidiueftimie.substack.com
PODCAST_AUTHOR=Ovidiu Eftimie
PODCAST_EMAIL=you@example.com
PODCAST_LANGUAGE=en
PODCAST_IMAGE_URL=

# Public URL where this repo's /output/public is hosted (GitHub Pages, S3, etc)
PUBLIC_BASE_URL=https://example.com

# GitHub â€” needed to push from the VM
GITHUB_TOKEN=your_github_token_here

# Paths
STATE_FILE=data/state.json
EPISODES_FILE=data/episodes.json
OUTPUT_AUDIO_DIR=output/public/audio
OUTPUT_FEED_FILE=output/public/feed.xml
